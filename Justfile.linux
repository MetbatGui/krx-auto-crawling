# Justfile for KRX Auto Crawling (Linux/macOS)

# Load .env file
set dotenv-load

# Default shell is bash
set shell := ["bash", "-c"]

# Override docker-compose command for Linux (GitHub Actions uses 'docker compose')
docker_compose := "docker compose"

import 'Justfile.common'

# Run auth command
auth:
    uv run netbuy auth
